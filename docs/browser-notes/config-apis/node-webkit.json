{
    // Basic stuff
    "name": "My Desktop App",
    "main": "init.js",
    "nodejs": true,
    "node-main": "core/nodejs.js",
    "single-instance": true,
    "user-agent": {
            %name: "openbsd", %ver: "5.5", %nwver: "1.0", %webkit_ver: "20.0", %osinfo: "??",
    }
    "node-remote": ["foobar.com", "*foobar.com"],
    "chromium-args": "--disable-threaded-compositing --enable-smooth-scrolling",
    "js-flags": "--harmony_proxies --harmony_collections",
    "inject-js-start": "core.pre-load.js",
    "inject-js-end": "core.post-load.js",
    "snapshot": "new/snapshot-8.js",
    "dom_storage_quota": 10,
    "no_edit_menu": true,

    // Other stuff
    "description": "A simple description",
    "version": "9000",
    "keywords": ["so fun", "way cool", "wow", "totally app"],
    "maintainers": [{ "name": "me", "email": "me@me.com" , "web": "myblog.me"}],
    "contributors": [{ "name": "some contrib", "email": "contrib@woot.com" , "web": "contrib-blog.com"}],
    "bugs": "mailto@me.com",
    "licenses": [{ "type": "GPLV2", "url": "http://www.example.com/licenses/gpl.html" }],
    "repositories": [{ "type": "git", "url": "http://github.com/example.git", "path": "packages/mypackage" }],


    // Widow subfields
    "window": {
        "title": "my app",
        "width": 800,
        "height": 500,
        "toolbar": true,
        "icon": "core/misc/icon.png",
        "position": "mouse",
        "min_width": 400,
        "min_height": 200,
        "max_width": 800,
        "max_height": 600,
        "as_desktop": true,
        "resizable": true,
        "always-on-top": false,
        "fullscreen": true,
        "show_in_taskbar": true,
        "frame": true,
        "show": true,
        "kiosk": false,
    }

    // Webkit subfields
    "webkit": {
        "plugin": false,
        "java": true,
        "page-cache": false,
    }
}
